pipeline {
    agent any

    environment {
        user_selection = ''
        PROCEED_PRODUCTION = 'Proceed Production'
        ROLLBACK_TEST = 'RollBack Test'
    }

    stages {

        stage('ST1 3114394F') {
            steps {
                echo 'ST1 3114394F: Environment is prepared. Start to rollout to TEST server'
            }
        }

        stage('ST2 3114394F') {
            steps {
                echo 'ST2 3114394F: TEST server is backup and updated'
            }
        }

        stage('ST3 3114394F') {
            steps {
                echo 'ST3 3114394F: Test result for TEST server is generated: TEST-result-file'
            }
        }

        stage('ST4 3114394F') {
            steps {
                echo "ST4 3114394F: TEST server's testing result has been inspected"
                
                script {
                    env.user_selection = input( 
                                            message: "Proceed Production or RollBack?", 
                                            parameters: [
                                                choice(
                                                    name: 'user_choice', 
                                                    choices: [env.PROCEED_PRODUCTION, env.ROLLBACK_TEST]
                                                )
                                            ]
                                        )
                } 

            }
        }

        stage ('ST5 3114394F') {
            steps {
                
                script {

                    if (env.user_selection == env.PROCEED_PRODUCTION) {
                        //bolt script 


                    }else if (env.user_selection == env.ROLLBACK_TEST) {
                        //docker run -it BKUP-TEST 

                    }


                }
                
            }
        }

        stage ('ST6 3114394F') {
            steps {
                script {

                    if (env.user_selection == env.PROCEED_PRODUCTION){
                        echo "ST6 3114394F: Production server is updated"
                    }else if (env.user_selection == env.ROLLBACK_TEST) {
                        echo "ST6 3114394F: TEST server is rollback"
                    }

                }
            }
        }

    }
}